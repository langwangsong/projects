<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <display-name>This is the display name of my J2EE component</display-name>
    <description>This is the description of my J2EE component</description>
    <servlet-class>cn.itcast.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DBUtils</servlet-name>
    <display-name>This is the display name of my J2EE component</display-name>
    <description>This is the description of my J2EE component</description>
    <servlet-class>cn.itcast.utils.DBUtils</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LastTimeServlet</servlet-name>
    <display-name>This is the display name of my J2EE component</display-name>
    <description>This is the description of my J2EE component</description>
    <servlet-class>cn.itcast.cookie.LastTimeServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Product</servlet-name>
    <display-name>This is the display name of my J2EE component</display-name>
    <description>This is the description of my J2EE component</description>
    <servlet-class>cn.itcast.cookie.Product</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ClearProductServlet</servlet-name>
    <display-name>This is the display name of my J2EE component</display-name>
    <description>This is the description of my J2EE component</description>
    <servlet-class>cn.itcast.cookie.ClearProductServlet</servlet-class>
  </servlet>





  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/servlet/LoginServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DBUtils</servlet-name>
    <url-pattern>/servlet/DBUtils</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LastTimeServlet</servlet-name>
    <url-pattern>/servlet/LastTimeServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Product</servlet-name>
    <url-pattern>/servlet/Product</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ClearProductServlet</servlet-name>
    <url-pattern>/servlet/ClearProductServlet</url-pattern>
  </servlet-mapping>

</web-app>